			<texPath>Things/Vehicles/Chimera/Chimera</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(5, 5)</drawSize>
			<color>(155, 155, 155)</color>
			<colorTwo>(65, 75, 80)</colorTwo>
			<colorThree>(45, 50, 45)</colorThree>
		</graphicData>
		<fillPercent>1</fillPercent>
		<buildDef>GW_Chimera_Blueprint</buildDef>
		<size>(4, 4)</size>
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
		<statBases>
			<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
			<ArmorRating_Sharp>1.78</ArmorRating_Sharp>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Flammability>0</Flammability>
			<MarketValue>4200</MarketValue>
		</statBases>
		<vehicleStats>
			<Mass>525</Mass>
			<MoveSpeed>8.6</MoveSpeed>
			<CargoCapacity>1200</CargoCapacity>
			<RepairRate>0.3</RepairRate>
			<AccelerationRate MayRequire="OskarPotocki.VanillaVehiclesExpanded">0.05</AccelerationRate>
		</vehicleStats>
		
		<soundSustainersOnEvent>
			<li>
				<start>IgnitionOn</start>
				<stop>IgnitionOff</stop>
				<value>GW_VoG_HeavySound</value>
